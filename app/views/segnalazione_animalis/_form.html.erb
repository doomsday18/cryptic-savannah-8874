      <% if @segnalazione_animali.errors.count > 1 %>
      <div id="error_explanation">
      <h2><%= pluralize(@segnalazione_animali.errors.count, "") %> Errori nella compilazione della segnalazione:<br/><br/> i campi * non possono essere vuoti</h2></div><br/>
      <%else%>
       <div id="error_explanation">
      <h2><%= pluralize(@segnalazione_animali.errors.count, "") %> Errore nella compilazione della segnalazione:<br/><br/> i campi * non possono essere vuoti</h2> </div> <br/>      
      <%end%>
    
  <% end %>

  <div class="form-field"> 
    <%= f.label :titolo,"Titolo*"%><br />
    <%= f.text_field :Titolo %>
  </div>
  <div class="form-field"> 
    <%= f.label :Classe %>
    <%= f.text_field :classe %><br>
  </div>
  <div class="form-field"> 
    <%= f.label :Epiteto_o_nome_volgare %>
    <%= f.text_field :epiteto %><br>
  </div>
