    <%= f.label :Specie %>
    <%= f.text_field :specie %><br>
  </div>
  <div class="form-field"> 
    <%= f.label :Autore %>
    <%= f.text_field :autore %><br>
  </div>
  <div class="form-field"> 
    <%= f.label :Foto %>
