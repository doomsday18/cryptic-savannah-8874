<div class ="maincontent">
<h1>Registrati</h1>
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <div style="color: red;">
  <%= devise_error_messages! %><br/>
   </div>
    <p><%= f.label :email %><br />
   <%= f.email_field :email, :autofocus => true %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </p>
  <p>
  <%= render "devise/shared/links" %><br/></p>
    </p>
<div class="autorizzazione">
    <%= render "static_pages/policydisclaimer" %>
    
</div>
<p>
<%= f.check_box :terms_of_service, :required => "true" %>
<%= f.label :Accetto_i_termini_di_servizio %>  
</p>
<br/>
<div style=" padding-left: 90px">
   <%= raw recaptcha_tags %></p></div>
<p class="button"><%= f.submit %></p>
<% end %>

<br/><br/><br/><br/><br/><br/><br/><br/><br/><br/>
<%= render 'layouts/footer' %>
</div>