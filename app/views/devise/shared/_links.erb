<plink><%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
  <%= link_to "Password dimenticata?", new_password_path(resource_name) %><br/>
<% end -%></plink>

<plink><%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Non hai ricevuto informazioni per la conferma?", new_confirmation_path(resource_name) %><br />
<% end -%></plink>

<plink><%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Non hai ricevuto istruzioni per sbloccare l'account?", new_unlock_path(resource_name) %><br />
<% end -%></plink>

<plink><%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Login con #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider) %><br />
  <% end -%>
<% end -%></plink>