<div class ="maincontent">
<h1>Registrati</h1>
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <div style="color: red;">
  <%= devise_error_messages! %><br/>
   </div>
    <p><%= f.label :email %>
   <%= f.email_field :email, :autofocus => true %>
  </p>
  <p>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </p>
 
  <p>
  <%= render "devise/shared/links" %><br/></p>

 <div style=" padding-left: 90px">
   <%= raw recaptcha_tags %></p></div>
     
<div class="autorizzazione">
    <%= render "static_pages/policydisclaimer" %>
    
</div>
<p>     <input type="radio" name="group1" value="accept"> Accetto
<input type="radio" name="group1" value="Not_accept" checked> Non Accetto<br>
</p>
<br/>
<p class="button"><%= f.submit %></p>
<% end %>
<br/><br/><br/><br/><br/><br/><br/><br/><br/><br/>
<%= render 'layouts/footer' %>
</div>